<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             FlowDirection="LeftToRight"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="True"
             x:Class="Kudomion.Features.SignUp.SignUpFormView">
    <VerticalStackLayout>

        <VerticalStackLayout>
        <Label FontAttributes="Bold" Text="Email"/>
        <Entry Margin="0, 2, 0, 0" Text="{Binding Email}"/>
        </VerticalStackLayout>
    
    <VerticalStackLayout Margin="0, 10, 0, 0">
    <Label FontAttributes="Bold" Text="Password"/>
    <Entry Margin="0, 2, 0, 0" IsPassword="True" Text="{Binding Password}"/>
    </VerticalStackLayout>

        <VerticalStackLayout Margin="0, 10, 0, 0">
            <Label FontAttributes="Bold" Text="Confirm Password"/>
            <Entry Margin="0, 2, 0, 0" Text="{Binding ConfirmPassword}"/>
        </VerticalStackLayout>

        <Button Text="Register" 
                WidthRequest="150"
                HeightRequest="40"
                Padding="5"
                FontSize="20"
                HorizontalOptions="Start"
                TextColor="White"
                Command="{Binding SignUpCommand}"
                BackgroundColor="#2f3030" 
                CornerRadius="50" />

    </VerticalStackLayout>
</ContentView>
