<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kudomion.Challenges"
             BackgroundColor="#202024"
             >
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
            <Frame Margin="15" BackgroundColor="#2c2c2c" HeightRequest="240">
                    <StackLayout>
            <Label Text="Please Choose Your Opponent Name" TextColor="Wheat" VerticalTextAlignment="Start" HorizontalTextAlignment="Center" FontSize="18" FontAttributes="Bold"/>
            <SearchBar x:Name="p1" Margin="3" HeightRequest="40" Grid.Row="1" Grid.Column="0" TextColor="White" CancelButtonColor="White" PlaceholderColor="White" BackgroundColor="RoyalBlue" Grid.ColumnSpan="3" Placeholder="Your UserName will be assigned here."/>
            <Label Text="V.S" Margin="2" TextColor="RoyalBlue" VerticalTextAlignment="Start" HorizontalTextAlignment="Center" FontSize="16" FontAttributes="Bold"/>
            <Picker VerticalTextAlignment="Center" HorizontalTextAlignment="Center" x:Name="p2" Title="Click Here To Choose Your Opponent.." TitleColor="White" BackgroundColor="#CA6F1E" ItemDisplayBinding="{Binding name}" Margin="3" TextColor="White"/>
            <StackLayout Margin="5" Orientation="Horizontal" HorizontalOptions="End">
             <Button  Text="Reset" TextColor="White" Clicked="Reset_Clicked" BackgroundColor="RoyalBlue" />
             <Button  Text="Create" TextColor="White" Clicked="CreateRoom_Clicked" BackgroundColor="#CA6F1E" />
            </StackLayout>

