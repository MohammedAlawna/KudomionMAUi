<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Kudomion"
             x:Class="Kudomion.LoginPage"
             BackgroundImageSource="lgBg"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="EndAndExpand">
            <Shell>
                <TabBar>
                    <Tab Title="Home" Icon="hme">
                        <ShellContent Shell.BackgroundColor="RoyalBlue" ContentTemplate="{DataTemplate local:Home}"/>
                    </Tab>

                    <Tab Title="News" Icon="newss">
                        <ShellContent ContentTemplate="{DataTemplate local:SamplePage}"/>
                    </Tab>

                    <Tab Title="Lobby" Icon="btlic">
                        <ShellContent ContentTemplate="{DataTemplate local:Challenges}"/>
                    </Tab>

                    <Tab Title="Ranking" Icon="rnke">
                        <ShellContent ContentTemplate="{DataTemplate local:Leaderboard}" />
                    </Tab>
                </TabBar>
            </Shell>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>