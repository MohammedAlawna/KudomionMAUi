<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kudomion.SignUpPage"
             FlowDirection="LeftToRight"
             BackgroundImageSource="lgBg"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="True"
             >

    <StackLayout FlowDirection="LeftToRight" Spacing="20">
        <Label Text="Sign Up"
                   FontAttributes="Bold"
                   FontSize="25"
                   TextColor="White"
                   Margin="15"
                HorizontalOptions="CenterAndExpand" />

        <Frame HorizontalOptions="Center" WidthRequest="250"  CornerRadius="30" Padding="3" BorderColor="Black" BackgroundColor="#2f3030">
            <Entry x:Name="userName" HorizontalOptions="CenterAndExpand" WidthRequest="200" Placeholder="Enter Username.." ReturnType="Next" PlaceholderColor="White" TextColor="White" />
        </Frame>

        <Frame HorizontalOptions="Center" WidthRequest="250"  CornerRadius="30" Padding="3" BackgroundColor="#2f3030" BorderColor="Black">
            <Entry x:Name="password" HorizontalOptions="CenterAndExpand" WidthRequest="200" ReturnType="Next" MaxLength="17" IsPassword="True" TextColor="White" Placeholder="Enter Password.." PlaceholderColor="White" />
        </Frame>

        <Frame HorizontalOptions="Center" WidthRequest="250"  CornerRadius="30" Padding="3" BackgroundColor="#2f3030" BorderColor="Black">
            <Entry x:Name="confirmPassword" HorizontalOptions="CenterAndExpand" WidthRequest="200" ReturnType="Next" IsPassword="True" TextColor="White" Placeholder="Confirm Password.." PlaceholderColor="White" />
        </Frame>

        <Button
                x:Name="SignUpButton"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="150"
                HeightRequest="40"
                Text="Sign-Up"
                Padding="5"
                FontSize="20"
                TextColor="White"
                Clicked="SignUpButton_Clicked"
                BackgroundColor="#2f3030" 
                CornerRadius="50"></Button>
    </StackLayout>
</ContentPage>