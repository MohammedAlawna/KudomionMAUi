<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#1c1c1c"
             x:Class="Kudomion.ViewModel.DecksList">
    <ContentPage.Content>
        <ScrollView Margin="10" VerticalOptions="FillAndExpand">
            <StackLayout x:Name="addDeckForm">
                <Frame BackgroundColor="#363636" BorderColor="Black" HeightRequest="250">
                    <StackLayout>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="150"/>
                                <RowDefinition Height="150"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="prfle"/>
                            <Label Text="Blue-Eyes" TextColor="White" FontSize="20" HorizontalTextAlignment="Start"  Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="0"/>
                            <StackLayout Grid.Column="2" Grid.Row="1" Orientation="Horizontal" x:Name="DeckItemButtons" Grid.ColumnSpan="3">
                                <Button HeightRequest="40" WidthRequest="40" BackgroundColor="DarkOrange" Text="Download" TextColor="White"/>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>