<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kudomion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Kudomion"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:Leaderboard}" />
            <ShellContent ContentTemplate="{DataTemplate local:Challenges}"/>
            <ShellContent ContentTemplate="{DataTemplate local:SignUpPage}"/>
        </Tab>
    </TabBar>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        Title="Log-In"
        FlyoutIcon=""
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Main"
        FlyoutIcon="hme"
        ContentTemplate="{DataTemplate local:LoginPage}"
        />

    <ShellContent
        Title="Duel Arena"
        FlyoutIcon=""
        ContentTemplate="{DataTemplate local:Challenges}"
        />

    <ShellContent
        Title="Ranking"
        FlyoutIcon=""
        ContentTemplate="{DataTemplate local:Leaderboard}"
        />

    <ShellContent
        Title="Alerts"
        FlyoutIcon="notif"
        />

    <ShellContent
        Title="Log-Out"
        FlyoutIcon=""
        />
    </FlyoutItem>

</Shell>
